page {
    width: 100%;
    height: 100%;
}

.base-container {
    min-height: 100%;
    background-color: #123;
    position: relative;
    display: flex;
    flex-direction: column;
}

.topBackground {
    flex: 0 0 auto;
    background: #1E90FF;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.userAvatar {
    margin: 48rpx;
    display: flex;
}

.userAvatar image {
    height: 100rpx;
    width: 100rpx;
    border-radius: 50rpx;
}

.hint-text-containter {
    display: flex;
    flex-direction: column;
}

.nickName {
    color: white;
    font-size: larger;
    font-weight: bold;
}

.auth-hint {
    background-color: rgba(0,0,0,0);
    color: white;
    opacity: 0.8;
    font-size: small;
    margin-bottom: 16rpx;
}

.container {
    background-color: #F5F5F5;
    flex: 1 1 auto;
    position: relative;
}

.aboutUsIcon {
    margin-top: 40rpx;
    margin-left: 30rpx;
    margin-bottom: 10rpx;
}

.cell-group-container {
    background-color: white;
    border-radius: 16rpx;
    margin: 16rpx;
    width: auto;
}

.cell-container {
    display: flex;
    padding: 32rpx;
    align-items: center;
}

.cell-left-image {
    width: 32rpx;
    height: 32rpx;
}

.cell-left-text {
    font-size: medium;
    color: #000;
    opacity: 0.8;
    flex: 1;
    margin-left: 16rpx;
    margin-right: 16rpx;
}

.cell-right-image {
    width: 14rpx;
    height: 25rpx;
    justify-self: flex-end;
}

.cell-divider {
    background-color: #F5F5F5;
    height: 1rpx;
    margin-left: 16rpx;
}

.dialog-container {
    margin: 64rpx;
}