/* pages/home/home.wxss */
.post-container{
    flex-direction:column;
    display:flex;
    margin:0rpx 0 40rpx;
    background-color:#fff;
    border-bottom:1px solid #ededed;
    border-top:1px solid #ededed;
    padding-bottom:5px;
  }
  .post-author-date{
    margin:10px 20rpx 10px;
    display:flex;
    flex-direction:row;
    align-items:center;
  }
  
  .post-author-date image{
    width:80rpx;
    height:80rpx;
  }
  
  .post-test image{
    width:100%;
    height:300rpx;
  }
  
  .post author-date text{
    margin-left:50rpx;
  
  }
  
  .post-title{
   font-size:40rpx;
   font-weight:600;
   color:#333;
  
  }
  
  .post-content{
    color:#666;
    font-size:26rpx;

    line-height:40rpx;
  }
  .aboutUsIcon{
    margin-top:40rpx;
    margin-left:30rpx;
    margin-bottom:10rpx;
}
