.header {
    margin-top: 20rpx;
    display: -webkit-flex;
    padding: 20rpx;
    background: #fff;
}

.header .icon {
    width: 40rpx;
    height: 40rpx;
    vertical-align: top;
}

.header .search {
    -webkit-flex: 1;
    color: #000;
    font-size: 30rpx;
    line-height: 40rpx;
    padding: 10rpx;
    border-radius: 10rpx;
    background: #eee;
}

.header .search .icon {
    float: left;
    margin: 1rpx 5rpx 0 0;
}

.header button {
    margin-left: 20rpx;
    font-size: 30rpx;
}

.header input {
    margin-top: 7rpx;
    height: 30rpx;
    min-height: 40rpx;
}

.lab_name {
    position: absolute;
    left: 30rpx;
}

.showsear {
    margin-left: 20rpx;
    padding-top: 0px;
    height: 80rpx;
}