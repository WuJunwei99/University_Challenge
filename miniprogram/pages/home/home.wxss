/* pages/home/home.wxss */
.post-container {
    flex-direction: column;
    display: flex;
    margin: 20rpx 0 40rpx;
    background-color: #fff;
    border-bottom: 1px solid #ededed;
    border-top: 1px solid #ededed;
    padding-bottom: 5px;
}

van-button {
    color: linear-gradient(to right, #00dbde, #fc00ff)
}

.post-author-date {
    margin: 10px 20rpx 10px;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.post-author-date image {
    width: 80rpx;
    height: 80rpx;
}

.post-test image {
    width: 100%;
    height: 300rpx;
}

.post author-date text {
    margin-left: 50rpx;

}

.post-title {
    font-size: 40rpx;
    font-weight: 600;
    color: #333;

}

.post-content {
    color: #666;
    font-size: 26rpx;
    margin-bottom: 20rpx;
    margin-left: 20rpx;
    line-height: 40rpx;
}

swiper {
    width: 100%;
    height: 380rpx;
}

swiper image {
    width: 100%;
    height: 100%;
}


.container {
    height: 120rpx;
    background: #1E90FF;
}

.bars {
    color: white;
    margin-left: 5%;
    margin-top: -5px
}

.cego_icon {
    display: flex;
    flex-direction: column;
    font-size: 28rpx;
    color: #fff
}

.header {
    display: -webkit-flex;
    left: 0;
    top: 0;
    width: 100%;
    height: 9%;
    padding: 20rpx;
    box-sizing: border-box;
    z-index: 1;
    -webkit-transition: background 0.5s ease-in-out;
}

.header.scrolled {
    background: #feb70f;
}

.header .icon {
    width: 40rpx;
    height: 40rpx;
}

.header .location {
    color: #fff;
    font-size: 30rpx;
    line-height: 40rpx;
    min-width: 100rpx;
    max-width: 340rpx;
    padding: 10rpx 20rpx 10rpx 10rpx;
    border-radius: 30rpx;
    background: rgba(0, 0, 0, 0.3);
    margin-right: 20rpx;
    vertical-align: middle;
}

.header .search {
    -webkit-flex: 1;
    color: #888;
    font-size: 30rpx;
    line-height: 30rpx;
    text-align: center;
    padding: 15rpx;
    border-radius: 15rpx;
    background: #fff;
    height: 48rpx;
}


.icons .icon {
    float: left;
    display: -webkit-flex;
    flex-direction: column;
    flex-wrap: wrap;
    width: 25%;
    text-align: center;
    margin: 10px 0px 10px 0px;
}

.icons .icon image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin: 0 auto;

}

.icons .icon text {
    color: #000;
    font-size: 24rpx;
    line-height: 2;
}

.section {
    background: #fff;
    border-bottom: 1rpx solid #dedede;
    margin-bottom: 15rpx;
    padding: 10rpx;
    height: 430rpx
}