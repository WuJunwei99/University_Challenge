/* pages/home/home.wxss */

.search-container {
    background-color: #1E90FF;
    display: flex;
}

.scroll-view {
    display: flex;
    height: 100vh;
    background-color: #F5F5F5;
}

.header {
    padding: 20rpx;
    /* 代表padding和border被包含在定义的width和height之内。 */
    box-sizing: border-box;
    flex: 1;
}

.header .icon {
    width: 36rpx;
    height: 36rpx;
    padding: 8rpx;
}

.search {
    display: flex;
    color: #888;
    border-radius: 16rpx;
    padding: 16rpx;
    background: #fff;
    align-items: center;
    justify-content: center;
}

.top-container {
    background: linear-gradient(#1E90FF, #F5F5F5);
}

.banner-container {
    width: auto;
    padding: 16rpx;
    overflow: hidden;
}

.banner-item {
    border-radius: 16rpx;
}

.section-container {
    background: #F5F5F5;
    margin-bottom: 15rpx;
    padding: 10rpx;
    height: 400rpx
}

.post-container {
    display: flex;
    flex-direction: column;
    margin-top: 16rpx;
    margin-left: 16rpx;
    margin-right: 16rpx;
    border-radius: 16rpx;
    background-color: #fff;
    overflow: hidden;
    box-shadow: 5rpx 5rpx 5rpx 5rpx #eee;
}

.post-title {
    font-size: large;
    font-weight: bold;
    color: #000;
    opacity: 0.9;
    margin-top: 24rpx;
    margin-left: 24rpx;
    margin-right: 24rpx;
}

.post-subtitle {
    font-size: smaller;
    color: #000;
    opacity: 0.5;
    margin-left: 24rpx;
    margin-right: 24rpx;
    margin-top: 6rpx;
    margin-bottom: 18rpx;
}

.post-image {
    width: 100%;
}

swiper {
    width: 100%;
    height: 360rpx;
}

swiper image {
    width: 100%;
    height: 100%;
}

.icons .icon {
    float: left;
    display: -webkit-flex;
    flex-direction: column;
    flex-wrap: wrap;
    width: 25%;
    text-align: center;
    margin: 10px 0px 10px 0px;
}

.icons .icon image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin: 0 auto;
}

.icons .icon text {
    color: #000;
    font-size: 24rpx;
    line-height: 2;
}